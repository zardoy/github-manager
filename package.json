{
    "name": "github-manager",
    "publisher": "zardoy",
    "displayName": "GitHub Manager",
    "description": "Quickly switch between cloned GitHub repos",
    "version": "0.0.1",
    "categories": [
        "Other"
    ],
    "keywords": [
        "offline",
        "folder",
        "local",
        "switch",
        "open"
    ],
    "activationEvents": [
        "onCommands"
    ],
    "contributes": {
        "commands": [
            {
                "category": "GitHub Manager",
                "command": "open-github-repos",
                "title": "Open Cloned GitHub Repository"
            },
            {
                "category": "GitHub Manager",
                "command": "open-non-git-dirs",
                "title": "Open Non-Git Directory"
            },
            {
                "category": "GitHub Manager",
                "command": "open-non-remote-repos",
                "title": "Open Non-Remote Repository"
            },
            {
                "category": "GitHub Manager",
                "command": "open-everything",
                "title": "Open Non-Git Directory Or Repository (all)"
            }
        ],
        "configuration": {
            "title": "GitHub Manager",
            "properties": {
                "github-manager.whereToOpen": {
                    "type": "string",
                    "default": "newWindowIfNotEmpty",
                    "enum": [
                        "newWindowIfNotEmpty",
                        "alwaysSameWindow",
                        "ask(after)",
                        "ask(before)"
                    ]
                }
            }
        }
    },
    "scripts": {
        "start": "vscode-framework start",
        "build": "vscode-framework build",
        "pretest": "pnpm build && pnpm lint",
        "test": "node ./out/test/runTest.js",
        "vscode:prepublish": "tsc && ts-node scripts/prepare.ts && pnpm build",
        "lint": "xo src",
        "lint:fix": "xo src --fix"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/lodash": "^4.14.172",
        "@types/mocha": "^9.0.0",
        "@types/node": "16.7.13",
        "@types/react": "^17.0.20",
        "@types/react-dom": "^17.0.9",
        "@types/vscode": "^1.60.0",
        "@zardoy/xo-config": "^0.1.0",
        "esbuild": "^0.12.25",
        "glob": "^7.1.7",
        "mocha": "^9.1.1",
        "modify-json-file": "^1.1.0",
        "type-fest": "^2.2.0",
        "typescript": "^4.4.2",
        "vscode-test": "^1.6.1",
        "xo": "^0.44.0"
    },
    "dependencies": {
        "@hediet/node-reload": "^0.7.3",
        "@octokit/rest": "^18.10.0",
        "@zardoy/tsconfig": "^1.2.2",
        "find-up": "^6.0.0",
        "git-remote-origin-url": "^3.1.0",
        "github-remote-info": "^1.0.3",
        "lodash": "^4.17.21",
        "nanoid": "^3.1.25",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "read-pkg": "^7.0.0",
        "vscode-framework": "github:zardoy/vscode-tools#build"
    },
    "license": "MIT"
}
