{
    "name": "github-manager",
    "displayName": "GitHub Manager",
    "publisher": "zardoy",
    "description": "Quickly switch between cloned GitHub repos",
    "preview": true,
    "version": "0.0.1",
    "categories": [
        "Other"
    ],
    "keywords": [
        "offline",
        "folder",
        "local",
        "switch",
        "open"
    ],
    "activationEvents": [
        "onCommands"
    ],
    "contributes": {
        "commands": [
            {
                "command": "openGithubRepos",
                "title": "Open Cloned GitHub Repository"
            },
            {
                "command": "openNonGitDirs",
                "title": "Open Non-Git Directory"
            },
            {
                "command": "openNonRemoteRepos",
                "title": "Open Non-Remote Repository"
            },
            {
                "command": "openEverything",
                "title": "Open Non-Git Directory Or Repository (all)"
            },
            {
                "command": "openAtGithub",
                "title": "Open At GitHub"
            }
        ],
        "configuration": {
            "title": "GitHub Manager",
            "properties": {
                "whereToOpen": {
                    "type": "string",
                    "enum": [
                        "newWindowIfNotEmpty",
                        "alwaysSameWindow",
                        "ask(after)",
                        "ask(before)"
                    ],
                    "default": "newWindowIfNotEmpty"
                },
                "sortBy": {
                    "type": "string",
                    "enum": [
                        "byOwner",
                        "lastModified",
                        "recentlyOpened"
                    ],
                    "default": "recentlyOpened"
                },
                "reverseList": {
                    "type": "boolean",
                    "description": "Reverse the list in all select menus",
                    "default": false
                },
                "ignore.users": {
                    "type": "array",
                    "description": "From which owners don't display GitHub repos",
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true,
                    "default": []
                },
                "ignore.dirNameRegex": {
                    "type": "string",
                    "description": "Regexp to filter out dirs. Applies to all commands",
                    "default": ""
                }
            }
        }
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": true
    },
    "scripts": {
        "start": "vscode-framework start",
        "build": "vscode-framework build",
        "test": "jest test/getDirs.test.ts",
        "test-vscode": "tsc -p tsconfig.test-vscode.json && node out-test/runTests.js"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/glob": "^7.1.4",
        "@types/jest": "^27.0.2",
        "@types/lodash": "^4.14.172",
        "@types/mocha": "^9.0.0",
        "@types/node": "16.7.13",
        "@types/react": "^17.0.20",
        "@types/react-dom": "^17.0.9",
        "@types/vscode": "^1.60.0",
        "@vscode/test-electron": "^1.6.2",
        "esbuild": "^0.12.25",
        "eslint": "^7",
        "eslint-plugin-zardoy-config": "^0.1.1",
        "fs-extra": "^10.0.0",
        "glob": "^7.1.7",
        "jest": "^27.3.1",
        "mocha": "^9.1.1",
        "modify-json-file": "^1.1.0",
        "ts-jest": "^27.0.7",
        "tsm": "^2.1.4",
        "type-fest": "^2.2.0",
        "typescript": "^4.4.4",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "@hediet/node-reload": "^0.7.3",
        "@octokit/rest": "^18.10.0",
        "@types/hosted-git-info": "^3.0.2",
        "@types/ini": "^1.3.31",
        "@types/url-join": "^4.0.1",
        "@zardoy/tsconfig": "^1.2.2",
        "esbuild-runner": "^2.2.1",
        "execa": "^5.1.1",
        "find-up": "^6.0.0",
        "git-remote-origin-url": "^3.1.0",
        "github-remote-info": "^1.0.3",
        "hosted-git-info": "^4.0.2",
        "ini": "^2.0.0",
        "lodash": "^4.17.21",
        "nanoid": "^3.1.25",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "read-pkg": "^7.0.0",
        "recursive-last-modified": "^1.0.5",
        "url-join": "^4.0.1",
        "vscode-framework": "0.0.10"
    },
    "license": "MIT"
}
